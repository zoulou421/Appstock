{% extends 'template.html.twig' %}


{% block title %}Gestion des sorties {% endblock %}

{% block body %}
 <div class="row">
        <div class="card col-md-6">
            <div class="card-header">Liste des ventes des produits</div>
            <div class="container">
              <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th>Identifiant</th>
                        <th>Date</th>
                        <th>Prix vendu</th>
                        <th>Quant√© vendu</th>
                        <th>Produits</th>
                    </tr>
                    {% for s in sorties %}
                        <tr>
                            <td>{{ s.id }}</td>
                            <td>{{ s.date|date('d/m/y') }}</td>
                            <td>{{ s.prix }}</td>
                            <td>{{ s.qte }}</td>
                            <td>{{ s.produit }}</td>
                        </tr>
                    {%endfor%}
                </table>
               </div>
            </div>
        </div>
        
        <div class="card col-md-6">
            <div class="card-header">Formulaire de gestion des ventes</div>
             <div class="container">
               <div class="card-body">
                {{ form(formulaire) }}
               </div>
             </div>
         </div>
    </div> 


{% endblock %}