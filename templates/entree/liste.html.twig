{% extends 'template.html.twig' %}


{% block title %}Gestion des entrées {% endblock %}

{% block body %}
 <div class="row">
        <div class="card col-md-6">
            <div class="card-header">Liste des entrées des produits</div>
            <div class="container">
              <div class="card-body">
                <table class="table table-striped">
                    <tr>
                        <th>Identifiant</th>
                        <th>Date</th>
                        <th>Prix entrée</th>
                        <th>Quanté entreé</th>
                        <th>Produits</th>
                    </tr>
                    {% for e in entrees %}
                        <tr>
                            <td>{{ e.id }}</td>
                            <td>{{ e.date|date('d/m/y') }}</td>
                            <td>{{ e.prix }}</td>
                            <td>{{ e.qtite }}</td>
                            <td>{{ e.produit }}</td>
                        </tr>
                    {%endfor%}
                </table>
               </div>
            </div>
        </div>
        
        <div class="card col-md-6">
            <div class="card-header">Formulaire de gestion des entrées</div>
             <div class="container">
               <div class="card-body">
                {{ form(form) }}
               </div>
             </div>
         </div>
    </div> 


{% endblock %}
